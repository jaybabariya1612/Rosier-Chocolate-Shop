@model IEnumerable<RosierBars.Models.ProductModel>

@{
    ViewBag.Title = "All Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Custom Chocolate Shop Styles */
    :root {
        --primary: #5C2E1F;
        --secondary: #E8C07D;
        --accent: #9C4A1A;
        --light: #FFF9F0;
        --highlight: #f4d7d1;
        --text: #3E2723;
    }

    .shop_bar_heading {
        background-color: var(--light);
        padding: 3rem 1rem;
        text-align: center;
    }

        .shop_bar_heading h3 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            color: var(--primary);
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            margin-top: 50px;
        }

        .shop_bar_heading p {
            color: var(--text);
            font-size: 1.1rem;
            line-height: 1.7;
            max-width: 700px;
            margin: 0 auto;
        }

    .all_products {
/*        max-width: 1400px;*/
        margin: 0px auto;
        padding: 50px;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        background-color: var(--light);
    }

    .product-card-wrapper {
        text-decoration: none;
        color: inherit;
    }

    .product-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        }

    .product-image-container {
        height: 220px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        position: relative;
    }

    .product-image {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        transition: transform 0.5s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .product-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: var(--accent);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.8rem;
        z-index: 2;
    }

    .product-info {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .product-name {
        font-weight: 600;
        font-size: 1.2rem;
        color: var(--primary);
        margin-bottom: 0.5rem;
        min-height: 3rem;
    }

    .product-description {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 1rem;
        line-height: 1.5;
        flex-grow: 1;
    }

    .price-container {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
        gap: 0.5rem;
    }

    .current-price {
        font-size: 1.4rem;
        font-weight: bold;
        color: var(--accent);
    }

    .original-price {
        font-size: 1rem;
        text-decoration: line-through;
        color: #999;
    }

    .rating {
        color: var(--secondary);
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

        .rating .filled {
            color: #FFC107;
        }

    .add-to-cart {
        width: 100%;
        padding: 0.75rem;
        background: var(--highlight);
        color: var(--primary);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: auto;
    }

        .add-to-cart:hover {
            background: var(--accent);
            color: white;
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .shop_bar_heading h3 {
            font-size: 2rem;
        }

        .shop_bar_heading p {
            width: 90% !important;
        }

        .all_products {
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        }
    }
</style>

@*bars heading section start*@
<div class="shop_bar_heading">
    <h3 class="text-center">Rosier Chocolates</h3>
    <p class="text-center w-sm-100 w-50 m-auto">
        Who says healthy can't taste amazing?
        At Rosier Chocolates, we've carefully crafted a
        variety of irresistible flavors—from
        smooth Chocolate Almond and creamy
        Peanut Butter to fruity favorites
        like Blueberry Bliss and Tropical Coconut.
    </p>
</div>
@*bars heading section end*@

<div class="all_products">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Product", "Shop", new { id = item.ProductId })" class="product-card-wrapper">
            <div class="product-card">
                <div class="product-image-container">
                    <img src="~/Content/images/@Html.DisplayFor(modelItem => item.ImageUrl)" class="product-image" alt="@Html.DisplayFor(modelItem => item.ProductName)" />
                </div>
                <div class="product-info">
                    <p class="product-name">@Html.DisplayFor(modelItem => item.ProductName)</p>
                    <p class="product-description">@Html.DisplayFor(modelItem => item.Description)</p>
                    <div class="price-container">
                        <span class="current-price">@Html.DisplayFor(modelItem => item.Price)</span>
                        <span class="original-price">@Html.DisplayFor(modelItem => item.OriginalPrice)</span>
                    </div>
                    <div class="rating">
                        @{
                            int fullStars = (int)item.TotalRatings;
                            bool hasHalfStar = (item.TotalRatings - fullStars) >= 0.5;
                        }
                        @for (int i = 0; i < fullStars; i++)
                        {
                            <i class="fas fa-star filled"></i>
                        }
                        @if (hasHalfStar)
                        {
                            <i class="fas fa-star-half-alt filled"></i>
                        }
                        @for (int i = 0; i < 5 - fullStars - (hasHalfStar ? 1 : 0); i++)
                        {
                            <i class="far fa-star"></i>
                        }
                        <span>(@Html.DisplayFor(modelItem => item.TotalRatings))</span>
                    </div>
                </div>
            </div>
        </a>
    }
</div>

<script>
    // Add to cart functionality
    document.querySelectorAll('.add-to-cart').forEach(button => {
        button.addEventListener('click', function (e) {
            e.preventDefault();
            e.stopPropagation();
            const productName = this.closest('.product-card').querySelector('.product-name').textContent;
            alert(`Added ${productName} to your cart!`);

            // Add visual feedback
            this.textContent = 'Added!';
            this.style.backgroundColor = '#4CAF50';
            setTimeout(() => {
                this.textContent = 'Add to Cart';
                this.style.backgroundColor = '';
            }, 2000);
        });
    });
</script>