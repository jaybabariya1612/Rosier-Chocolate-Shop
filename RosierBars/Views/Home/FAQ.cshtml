@{
    ViewBag.Title = "FAQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        :root {
            --dark-chocolate: #3D1A0B;
            --milk-chocolate: #5C3A21;
            --caramel: #D4A76A;
            --cream: #F5E5C6;
            --berry: #C45E7F;
            --mint: #A2D9B1;
        }


        /* Floating Chocolate Elements */
        .floating-chocolate {
            position: absolute;
            z-index: -1;
            opacity: 0.7;
            animation: float 15s infinite linear;
            pointer-events: none;
        }

        @@keyframes float {
            0% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }

            100% {
                transform: translateY(0) rotate(360deg);
            }
        }

        .chocolate-1 {
            top: 10%;
            left: 5%;
            width: 40px;
            animation-duration: 18s;
        }

        .chocolate-2 {
            top: 30%;
            right: 8%;
            width: 60px;
            animation-duration: 22s;
        }

        .chocolate-3 {
            bottom: 20%;
            left: 10%;
            width: 50px;
            animation-duration: 20s;
        }

        .chocolate-4 {
            bottom: 40%;
            right: 5%;
            width: 45px;
            animation-duration: 25s;
        }

        .faq-container {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(139, 90, 43, 0.1);
            position: relative;
            z-index: 1;
            backdrop-filter: blur(2px);
        }

        .faq-header {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
        }

        .faq-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            color: var(--dark-chocolate);
            margin-bottom: 1rem;
            position: relative;
            display: inline-block;
        }

            .faq-title:after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 120px;
                height: 4px;
                background: linear-gradient(90deg, var(--milk-chocolate), var(--caramel));
                border-radius: 2px;
            }

        .faq-subtitle {
            color: var(--milk-chocolate);
            font-size: 1.2rem;
            max-width: 700px;
            margin: 0 auto;
        }

        .faq-section {
            margin-bottom: 3rem;
            position: relative;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            color: var(--milk-chocolate);
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px dashed var(--caramel);
        }

        .faq-item {
            margin-bottom: 1.5rem;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(92, 58, 33, 0.1);
            transition: all 0.3s ease;
            background: white;
            position: relative;
        }

            .faq-item:hover {
                box-shadow: 0 4px 12px rgba(92, 58, 33, 0.15);
                transform: translateY(-2px);
            }

        .faq-question {
            background: linear-gradient(135deg, var(--cream), white);
            padding: 1.5rem;
            font-weight: 600;
            font-size: 1.1rem;
            color: var(--dark-chocolate);
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease;
            position: relative;
        }

            .faq-question:hover {
                background: linear-gradient(135deg, var(--caramel), var(--cream));
            }

            .faq-question:after {
                content: '+';
                font-size: 1.5rem;
                color: var(--milk-chocolate);
                transition: all 0.3s ease;
            }

            .faq-question.active:after {
                content: '-';
                color: var(--berry);
            }

        .faq-answer {
            padding: 0 1.5rem;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s ease;
            background-color: white;
        }

        .faq-answer-content {
            padding: 1.5rem 0;
        }

        .contact-prompt {
            text-align: center;
            margin-top: 3rem;
            padding: 2rem;
            background: linear-gradient(135deg, var(--cream), white);
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(92, 58, 33, 0.1);
            position: relative;
            overflow: hidden;
        }

            .contact-prompt:before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(212,167,106,0.1) 0%, rgba(255,255,255,0) 70%);
                z-index: 0;
            }

        .contact-btn {
            display: inline-block;
            padding: 1rem 2rem;
            background: linear-gradient(135deg, var(--milk-chocolate), var(--dark-chocolate));
            color: white;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            margin-top: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(61, 26, 11, 0.2);
            position: relative;
            z-index: 1;
            border: none;
            cursor: pointer;
        }

            .contact-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(61, 26, 11, 0.3);
                background: linear-gradient(135deg, var(--dark-chocolate), var(--milk-chocolate));
            }

        /* Chocolate Drip Effect */
        .chocolate-drip {
            position: absolute;
            width: 100%;
            height: 20px;
            top: 0;
            left: 0;
            background: linear-gradient(to bottom, var(--dark-chocolate), transparent);
            opacity: 0.1;
        }

        @@media (max-width: 768px) {
            .faq-container {
                padding: 1.5rem;
            }

            .faq-title {
                font-size: 2.2rem;
            }

            .faq-question {
                padding: 1rem;
            }

            .floating-chocolate {
                display: none;
            }
        }
    </style>

    <!-- Floating Chocolate Elements -->
    <img src="@Url.Content("~/Content/images/chocolate-piece-1.png")" class="floating-chocolate chocolate-1" alt="Chocolate decoration">
    <img src="@Url.Content("~/Content/images/chocolate-piece-2.png")" class="floating-chocolate chocolate-2" alt="Chocolate decoration">
    <img src="@Url.Content("~/Content/images/chocolate-piece-3.png")" class="floating-chocolate chocolate-3" alt="Chocolate decoration">
    <img src="@Url.Content("~/Content/images/chocolate-piece-4.png")" class="floating-chocolate chocolate-4" alt="Chocolate decoration">

    <div class="chocolate-drip"></div>

    <div class="faq-container">
        <div class="faq-header">
            <h1 class="faq-title">Chocolate Questions</h1>
            <p class="faq-subtitle">Find answers to common questions about our delicious chocolates, ingredients, shipping, and more.</p>
        </div>

        <div class="faq-section">
            <h2 class="section-title"><i class="fas fa-coffee"></i> Product Questions</h2>

            <div class="faq-item">
                <div class="faq-question">What makes your chocolate special?</div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        <p>Our chocolate is crafted using only the finest organic cacao beans, sustainably sourced from small family farms. We use traditional Swiss techniques combined with innovative flavor combinations to create uniquely delicious chocolates. All our products are handmade in small batches to ensure premium quality.</p>
                    </div>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">Are your chocolates suitable for vegans?</div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        <p>We offer a dedicated vegan chocolate line made with oat milk instead of dairy. These products are clearly marked with a green "Vegan" label on our packaging and website. Our dark chocolate bars with 70% cacao or higher are naturally vegan as they contain no dairy products.</p>
                    </div>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">Do you use any artificial ingredients?</div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        <p>Absolutely not! We pride ourselves on using only natural ingredients. Our chocolates contain no artificial flavors, colors, or preservatives. We sweeten our products with organic cane sugar or coconut sugar, and all flavorings come from real ingredients like vanilla beans, fruits, and spices.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="faq-section">
            <h2 class="section-title"><i class="fas fa-shipping-fast"></i> Shipping & Delivery</h2>

            <div class="faq-item">
                <div class="faq-question">How do you ship chocolates in warm weather?</div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        <p>During warmer months, we ship all chocolates with ice packs in insulated packaging to prevent melting. We also recommend choosing expedited shipping for hot climates. If your chocolate arrives melted, please contact us immediately for a replacement or refund.</p>
                    </div>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">What is your shipping policy?</div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        <p>We offer worldwide shipping with the following options:</p>
                        <ul>
                            <li>Standard Shipping: 3-5 business days ($5.99)</li>
                            <li>Expedited Shipping: 2-3 business days ($12.99)</li>
                            <li>Free shipping on orders over $50</li>
                        </ul>
                        <p>All orders are processed within 1-2 business days. We don't ship on weekends or holidays.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="faq-section">
            <h2 class="section-title"><i class="fas fa-heart"></i> Dietary Concerns</h2>

            <div class="faq-item">
                <div class="faq-question">Are your products gluten-free?</div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        <p>Most of our chocolates are naturally gluten-free, and we have a dedicated gluten-free facility for these products. However, some items containing cookies or other gluten ingredients are made in a separate facility. All products are clearly labeled if they contain gluten.</p>
                    </div>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">Do you have sugar-free options?</div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        <p>Yes! Our "No Sugar Added" line is sweetened with monk fruit and stevia. These chocolates contain less than 1g of sugar per serving while maintaining rich chocolate flavor. They're perfect for diabetics or anyone watching their sugar intake.</p>
                    </div>
                </div>
            </div>

            <div class="faq-item">
                <div class="faq-question">Are your chocolates nut-free?</div>
                <div class="faq-answer">
                    <div class="faq-answer-content">
                        <p>While we offer many nut-free products, our facility does process tree nuts and peanuts. We have strict cleaning procedures between batches, but we cannot guarantee complete absence of nut traces. Products containing nuts are clearly labeled with allergen warnings.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="contact-prompt">
            <h3>Still have questions?</h3>
            <p>Our chocolate experts are happy to help with any special inquiries.</p>
            <a href="@Url.Action("Contact", "Home")" class="contact-btn">Contact Us</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // FAQ Accordion Functionality
            const questions = document.querySelectorAll('.faq-question');

            questions.forEach(question => {
                question.addEventListener('click', () => {
                    const answer = question.nextElementSibling;
                    const isActive = question.classList.contains('active');

                    // Close all answers
                    document.querySelectorAll('.faq-question').forEach(q => {
                        q.classList.remove('active');
                        q.nextElementSibling.style.maxHeight = null;
                    });

                    // Open clicked one if it wasn't active
                    if (!isActive) {
                        question.classList.add('active');
                        answer.style.maxHeight = answer.scrollHeight + 'px';

                        // Add chocolate particle effect
                        createChocolateParticles(question);
                    }
                });
            });

            // Open first question by default
            if (questions.length > 0) {
                questions[0].classList.add('active');
                questions[0].nextElementSibling.style.maxHeight = questions[0].nextElementSibling.scrollHeight + 'px';
            }

            // Create floating chocolate particles
            function createChocolateParticles(element) {
                const rect = element.getBoundingClientRect();
                const colors = ['#5C3A21', '#D4A76A', '#3D1A0B', '#C45E7F'];

                for (let i = 0; i < 8; i++) {
                    const particle = document.createElement('div');
                    particle.style.position = 'absolute';
                    particle.style.width = '8px';
                    particle.style.height = '8px';
                    particle.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    particle.style.borderRadius = '50%';
                    particle.style.left = (rect.left + rect.width / 2) + 'px';
                    particle.style.top = (rect.bottom) + 'px';
                    particle.style.pointerEvents = 'none';
                    particle.style.zIndex = '10';
                    particle.style.opacity = '0.8';

                    document.body.appendChild(particle);

                    // Animate particle
                    const animation = particle.animate([
                        { transform: 'translateY(0) scale(1)', opacity: 0.8 },
                        { transform: `translateY(-${Math.random() * 100 + 50}px) translateX(${Math.random() * 100 - 50}px) scale(0.5)`, opacity: 0 }
                    ], {
                        duration: 1000,
                        easing: 'cubic-bezier(0.4, 0, 0.2, 1)'
                    });

                    animation.onfinish = () => particle.remove();
                }
            }
        });
    </script>
