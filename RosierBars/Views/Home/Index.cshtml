            <img src="~/Content/images/GO_Bar_New_Flavor.png" alt="GO Bar New Flavor">
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter-section">
        <img src="~/Content/images/chocolate-background.jpg" class="newsletter-bg" alt="Chocolate Newsletter Signup">

        <!-- Melting Chocolate Animation -->
