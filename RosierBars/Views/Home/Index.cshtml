<script>
    const carousel = document.getElementById('productCarousel');
    const scrollSpeed = 1; // pixels per step
    const intervalDelay = 20; // ms between steps

    // Clone the carousel items for infinite loop effect
    const cloneCarouselItems = () => {
        const items = [...carousel.children];
        items.forEach(item => {
            const clone = item.cloneNode(true);
            carousel.appendChild(clone);
        });
    };

    // Auto-scroll loop
    const autoScroll = () => {
        carousel.scrollLeft += scrollSpeed;
        const maxScrollLeft = carousel.scrollWidth / 2;

        if (carousel.scrollLeft >= maxScrollLeft) {
            carousel.scrollLeft = 0;
        }
    };

    // Initialize
    window.addEventListener('DOMContentLoaded', () => {
        cloneCarouselItems();
        setInterval(autoScroll, intervalDelay);
    });
</script>

