    /* Team Section */
    .team-section {
        padding: 4rem 0;
        background-color: var(--chocolate-dark);
        color: white;
        position: relative;
    }

    .team-title {
        font-family: 'Playfair Display', serif;
        text-align: center;
        margin-bottom: 3rem;
        font-size: 2.5rem;
        color: var(--chocolate-cream);
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .team-member {
        background: rgba(255,255,255,0.1);
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
        transition: all 0.3s ease;
        backdrop-filter: blur(5px);
    }

    .team-member:hover {
        transform: translateY(-10px);
        background: rgba(255,255,255,0.2);
    }

    .team-member img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid var(--chocolate-cream);
        margin-bottom: 1rem;
    }

    .team-member h4 {
        color: var(--chocolate-cream);
        margin-bottom: 0.5rem;
    }

    .team-member p {
        color: var(--chocolate-milk);
        font-size: 0.9rem;
    }

    /* Values Section */
    .values-section {
        padding: 4rem 0;
        background-color: white;
    }

    .values-title {
        font-family: 'Playfair Display', serif;
        text-align: center;
        margin-bottom: 3rem;
        font-size: 2.5rem;
        color: var(--chocolate-dark);
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .value-card {
        background: #f9f5f0;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
        transition: all 0.3s ease;
        border-bottom: 4px solid var(--chocolate-light);
    }

    .value-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .value-icon {
        font-size: 2.5rem;
        color: var(--chocolate-light);
        margin-bottom: 1rem;
    }

    .value-card h4 {
        color: var(--chocolate-dark);
        margin-bottom: 1rem;
    }

    .value-card p {
        color: var(--chocolate-medium);
        line-height: 1.6;
    }

    /* Chocolate Wave */
