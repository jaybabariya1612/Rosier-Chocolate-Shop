@{
    ViewBag.Title = "About";
}

<style>
    /* Base Styles */
    :root {
        --chocolate-dark: #3a1f0a;
        --chocolate-medium: #5d3a1a;
        --chocolate-light: #8b5a2b;
        --chocolate-cream: #d4a76a;
        --chocolate-milk: #f0d9b5;
    }

    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f9f5f0;
        overflow-x: hidden;
    }

    /* Header Image */
    .header-image {
        width: 100%;
        height: 60vh;
        object-fit: cover;
        object-position: center;
        filter: brightness(0.9) contrast(1.1);
        transition: all 0.5s ease;
    }

    .header-image:hover {
        filter: brightness(1) contrast(1.2);
    }

    /* Main Content Container */
    .about-container {
        position: relative;
        padding: 5rem 0;
        background: linear-gradient(135deg, #f9f5f0 0%, #f0e6d6 100%);
        overflow: hidden;
    }

    /* Chocolate Title */
    .about-title {
        font-family: 'Playfair Display', serif;
        font-size: 5rem;
        font-weight: 700;
        color: var(--chocolate-dark);
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
        z-index: 10;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .about-title span {
        display: block;
        font-size: 1.5rem;
        color: var(--chocolate-light);
        margin-top: 1rem;
    }

    /* Content Box */
    .about-content {
        background-color: white;
        padding: 3rem;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        position: relative;
        z-index: 5;
        max-width: 800px;
        margin: 0 auto;
        border: 1px solid var(--chocolate-milk);
        transform: translateY(0);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .about-content:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }

    .about-content h3 {
        color: var(--chocolate-dark);
        font-size: 2rem;
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 0.5rem;
    }

    .about-content h3::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 50px;
        height: 3px;
        background: var(--chocolate-light);
    }

    .about-content p {
        color: var(--chocolate-medium);
        line-height: 1.8;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    /* Chocolate SVG Elements */
    .chocolate-piece {
        position: absolute;
        width: 50px;
        height: 50px;
        z-index: 1;
        opacity: 0.8;
        animation: float 6s infinite ease-in-out;
        transition: all 0.5s ease;
    }

    .chocolate-piece:hover {
        transform: scale(1.2) rotate(15deg);
        opacity: 1;
        animation-play-state: paused;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .about-title {
            font-size: 3.5rem;
        }

        .about-content {
            padding: 2rem;
        }

        .chocolate-piece {
            width: 30px;
            height: 30px;
        }
    }

