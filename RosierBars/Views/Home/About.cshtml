<script>
    // This would be more dynamic in a real implementation
    document.addEventListener('DOMContentLoaded', function() {
        // Add more chocolate pieces dynamically
        const container = document.querySelector('.about-container');
        const chocolateShapes = [
            `<path d="M10,10 Q25,5 40,10 Q55,15 50,30 Q45,45 30,50 Q15,55 10,40 Q5,25 10,10" fill="#5D3A1A"/>`,
            `<rect x="10" y="10" width="80" height="80" rx="15" ry="15" fill="#8B5A2B"/>`,
            `<circle cx="50" cy="50" r="40" fill="#3A1F0A"/>`,
            `<polygon points="50,5 95,35 95,75 50,95 5,75 5,35" fill="#5D3A1A"/>`,
            `<path d="M20,20 L80,20 L90,50 L80,80 L20,80 L10,50 Z" fill="#8B5A2B"/>`
        ];

        // Add 10 more random chocolate pieces
        for (let i = 0; i < 10; i++) {
            const top = Math.random() * 80 + 10;
            const left = Math.random() * 80 + 10;
            const delay = Math.random() * 5;
            const size = Math.random() * 30 + 30;
            const shape = chocolateShapes[Math.floor(Math.random() * chocolateShapes.length)];

            const svg = document.createElementNS("http://www.w3.org/2000/svg", "svg");
            svg.setAttribute('class', 'chocolate-piece');
            svg.setAttribute('viewBox', '0 0 100 100');
            svg.setAttribute('style', `top: ${top}%; left: ${left}%; width: ${size}px; height: ${size}px; animation-delay: ${delay}s;`);
            svg.innerHTML = shape;

            container.appendChild(svg);
        }

        // Add hover effects to all chocolate pieces
        const chocolates = document.querySelectorAll('.chocolate-piece');
        chocolates.forEach(choc => {
            choc.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.2) rotate(15deg)';
                this.style.opacity = '1';
            });

            choc.addEventListener('mouseleave', function() {
                this.style.transform = '';
                this.style.opacity = '0.8';
            });
        });
    });
</script>