@model RosierBars.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["UserName"] != null)
{
    <!-- Logout Page (User Dashboard) -->
    <style>
        /* Chocolate Color Palette */
        :root {
            --chocolate-dark: #2a1505;
            --chocolate-medium: #4a2a10;
            --chocolate-light: #6b4423;
            --chocolate-lighter: #8b5a2b;
            --chocolate-cream: #f8ede5;
            --chocolate-gold: #d4af37;
            --chocolate-milk: #e6d5c3;
            --chocolate-white: #fff9f5;
        }

        /* Dashboard Styles */
        .dashboard-container {
            min-height: 80vh;
            background-color: var(--chocolate-white);
            padding: 2rem 0;
        }

        .dashboard-header {
            background: linear-gradient(135deg, var(--chocolate-medium), var(--chocolate-dark));
            color: white;
            padding: 2rem;
            margin-bottom: 2rem;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .welcome-message {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .account-email {
            font-size: 1rem;
            opacity: 0.9;
        }

        .dashboard-content {
            display: flex;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .account-sidebar {
            width: 250px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            padding: 1.5rem;
            margin-right: 2rem;
        }

        .account-menu-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--chocolate-dark);
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid var(--chocolate-cream);
        }

        .account-menu-item {
            display: block;
            padding: 0.75rem 0;
            color: var(--chocolate-medium);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            border-bottom: 1px solid var(--chocolate-cream);
        }

            .account-menu-item:hover {
                color: var(--chocolate-dark);
                padding-left: 10px;
            }

            .account-menu-item i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

        .account-main {
            flex: 1;
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            padding: 2rem;
        }

        .account-section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--chocolate-dark);
            margin-bottom: 1.5rem;
        }

        .account-card {
            background: var(--chocolate-white);
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid var(--chocolate-cream);
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--chocolate-medium);
            margin-bottom: 1rem;
        }

        .card-content {
            color: var(--chocolate-light);
        }

        .logout-btn {
            background: linear-gradient(135deg, var(--chocolate-medium), var(--chocolate-dark));
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            margin-top: 1rem;
        }

            .logout-btn:hover {
                background: linear-gradient(135deg, var(--chocolate-dark), var(--chocolate-light));
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(74, 42, 16, 0.2);
            }

            .logout-btn i {
                margin-right: 8px;
            }

        .account-menu-item.active {
            font-weight: bold;
            color: #007bff;
        }

        .loading {
            padding: 20px;
            text-align: center;
            font-style: italic;
        }

        .error {
            color: red;
            padding: 20px;
            text-align: center;
        }



        /* Responsive */
        @@media (max-width: 768px) {
            .dashboard-content {
                flex-direction: column;
            }

            .account-sidebar {
                width: 100%;
                margin-right: 0;
                margin-bottom: 2rem;
            }
        }
    </style>

    <div class="dashboard-container">
        <div class="dashboard-header mt-4">
            <div class="welcome-message">Hello, @Session["UserName"]</div>
            <div class="account-email">@Session["Email"]</div>
        </div>
        <div class="dashboard-content">
            <div class="account-sidebar">
                <div class="account-menu-title">Your Account</div>

                <a href="#" class="account-menu-item" data-target="Account"><i class="fas fa-user"></i> Account</a>
                <a href="#" class="account-menu-item" data-target="Orders"><i class="fas fa-box"></i> Orders</a>
                @*<a href="#" class="account-menu-item" data-target="Addresses"><i class="fas fa-map-marker-alt"></i> Addresses</a>
                <a href="#" class="account-menu-item" data-target="Payments"><i class="fas fa-credit-card"></i> Payment Methods</a>
                <a href="#" class="account-menu-item" data-target="Notifications"><i class="fas fa-bell"></i> Notifications</a>*@
                @*<a href="#" class="account-menu-item" data-target="Settings"><i class="fas fa-cog"></i> Settings</a>*@
            @using (Html.BeginForm("LogOut", "Register", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Sign Out</button>
            }
            </div>

            <div class="account-main" id="account-section">
                @Html.Partial("~/Views/Dashboard/_Account.cshtml")

            </div>
        </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $(".account-menu-item").click(function (e) {
                        e.preventDefault();

                        var $this = $(this);
                        var section = $this.data("target");

                        // Highlight active item
                        $(".account-menu-item").removeClass("active");
                        $this.addClass("active");

                        // Optional: show loading
                        $("#account-section").html('<div class="loading">Loading...</div>');

                        $.ajax({
                            url: '/Dashboard/' + section,
                            type: 'GET',
                            success: function (result) {
                                $("#account-section").html(result);
                            },
                            error: function () {
                                $("#account-section").html('<div class="error">Error loading section. Please try again.</div>');
                            }
                        });
                    });
                });
            </script>
        }

    </div>
}
