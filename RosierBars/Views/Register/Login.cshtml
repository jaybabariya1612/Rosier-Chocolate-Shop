    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="login-container">
            <div class="chocolate-swirl swirl-1"></div>
            <div class="chocolate-swirl swirl-2"></div>

            <div class="login-form-container animate-fade">
                <h1 class="animate-fade delay-1">Sweet Indulgence</h1>
                <div id="loginMessage" class="text-center mb-3">
                    @if (ViewBag.Message != null)
                    {
                        <span class="text-danger">@ViewBag.Message</span>
                    }
                    else
                    {
                        <h1 class="animate-fade delay-1">Welcome Back</h1>
                    }
                </div>


                @Html.ValidationSummary(true, "", new { @class = "text-danger animate-fade delay-2" })

                <div class="form-group animate-fade delay-2">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "your.email@example.com" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group animate-fade delay-3">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label" })
                    <div class="password-input-container" style="position: relative;">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your password", id = "password-field" } })
                        <button type="button" id="password-toggle" class="password-toggle" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; color: var(--chocolate-light);">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="login-btn animate-fade delay-4">
                    <i class="fas fa-sign-in-alt me-2"></i> Sign In
                </button>

                <div class="register-link animate-fade delay-4">
                    New here? @Html.ActionLink("Create an account", "Register", null, new { @class = "text-decoration-none" })
                </div>
            </div>

            <div class="chocolate-drip"></div>
        </div>
    }

    @section Scripts {
        <script>
            // Add focus effects to form inputs
            document.querySelectorAll('.form-control').forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'translateY(-2px)';
                    this.parentElement.style.transition = 'all 0.3s ease';
                });

                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'translateY(0)';
                });
            });
            $(document).ready(function() {
                // Check if we should delay redirect
                var shouldDelay = '@(TempData["ShouldDelayRedirect"] != null && TempData["ShouldDelayRedirect"].ToString() == "True")';
                var loginMessage = '@TempData["LoginMessage"]';

                if (shouldDelay === 'True' && loginMessage) {
                    // Show success message
                    $('#loginMessage').text(loginMessage).addClass('text-success').removeClass('text-danger');

                    // Redirect after 3 seconds
                    setTimeout(function() {
                        window.location.href = '@Url.Action("Index", "Home")';
                    }, 3000);
                }
            });
            document.getElementById('password-toggle').addEventListener('click', function () {
                const passwordField = document.getElementById('password-field');
                const icon = this.querySelector('i');

                if (passwordField.type === 'password') {
                    passwordField.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    passwordField.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        </script>
    }
